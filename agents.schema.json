{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/ricon-family/shimmer/agents.schema.json",
  "title": "Agent Configuration",
  "description": "Defines agents, their jobs, and schedules for workflow generation",

  "type": "object",
  "required": ["agents"],
  "properties": {
    "agents": {
      "type": "object",
      "description": "Map of agent names to their configuration",
      "additionalProperties": { "$ref": "#/$defs/agent" }
    }
  },

  "$defs": {
    "agent": {
      "title": "Agent",
      "description": "Configuration for a single agent",
      "type": "object",
      "required": ["jobs"],
      "properties": {
        "jobs": {
          "type": "object",
          "description": "Map of job names to their configuration",
          "additionalProperties": { "$ref": "#/$defs/job" }
        }
      }
    },

    "job": {
      "title": "Job",
      "description": "Configuration for a scheduled job",
      "type": "object",
      "properties": {
        "schedule": {
          "type": "string",
          "description": "Cron expression (e.g., '0 */4 * * *' for every 4 hours)",
          "pattern": "^[0-9*,/-]+ [0-9*,/-]+ [0-9*,/-]+ [0-9*,/-]+ [0-9*,/-]+$"
        }
      }
    }
  }
}
